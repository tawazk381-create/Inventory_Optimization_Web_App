# File: public/.htaccess

# Disable directory listing
Options -Indexes
Options -MultiViews

<IfModule mod_rewrite.c>
    RewriteEngine On

    # ------------------------------------------------------------
    # Force redirect if someone tries /public/... in URL
    # This ensures clean URLs without /public
    # ------------------------------------------------------------
    RewriteCond %{THE_REQUEST} \s/public/([^\s?]*) [NC]
    RewriteRule ^public/(.*)$ /$1 [L,R=301]

    # Serve existing files or directories as-is
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Route everything else to the front controller
    RewriteRule ^ index.php [L,QSA]
</IfModule>

# Protect sensitive files (.env, .git, .htaccess)
<IfModule mod_authz_core.c>
    <FilesMatch "^\.(env|git|htaccess)$">
        Require all denied
    </FilesMatch>
</IfModule>

AddDefaultCharset utf-8
